@namespace InfowareSoft.Blazor.MaterialDesign.Components
@inherits DOMComponent

<CascadingValue Value=this Name="MDFormField">
    <div class="@ClassMapper.Class" @ref="Ref" @attributes="@Attributes">
        @ChildContent
    </div>
</CascadingValue>

@code {
    protected override void OnInitialized()
    {
        base.OnInitialized();
        ClassMapper.Add("mdc-form-field")
            .Variant(() => Variant.GetName());
    }

    [Parameter] public MDFormFieldVariant Variant { get; set; } = MDFormFieldVariant.Default;
}
