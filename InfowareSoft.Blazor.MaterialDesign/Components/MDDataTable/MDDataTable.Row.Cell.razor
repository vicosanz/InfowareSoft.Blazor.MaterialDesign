@namespace InfowareSoft.Blazor.MaterialDesign.Components
@inherits DOMComponent

<th class="@ClassMapper.Class" id="@Id" @attributes="@Attributes">@ChildContent</th>

@code {
    protected override void OnInitialized()
    {
        base.OnInitialized();
        ClassMapper.Add("mdc-data-table__cell")
            .Variant(() => Variant.GetName());
    }

    [Parameter] public MDDataTablerCellVariant Variant { get; set; } = MDDataTablerCellVariant.Default;
}
