@namespace InfowareSoft.Blazor.MaterialDesign.Components
@inherits DOMComponent
@implements IMDIcon

<i class="@ClassMapper.Class">@Icon.GetName()</i>

@code {
    protected override void OnInitialized()
    {
        base.OnInitialized();
        ClassMapper.Style(()=> Style.GetName());
    }

    [Parameter] public MDIconEnum Icon { get; set; }
    [Parameter] public MDIconStyle Style { get; set; } = MDIconStyle.Default;

    public enum MDIconStyle
    {
        [Html("material-icons")]
        Default,
        [Html("material-icons-outlined")]
        Outlined,
        [Html("material-icons-round")]
        Rounded,
        [Html("material-icons-two-tone")]
        TwoTone,
        [Html("material-icons-sharp")]
        Sharp,
    }
}
