@namespace InfowareSoft.Blazor.MaterialDesign.Components
@inherits DOMComponent
@implements IMDIcon

<i class="@ClassMapper.Class">@Icon.GetName()</i>

@code {
    protected override void OnInitialized()
    {
        base.OnInitialized();
        ClassMapper.Variant(()=> Variant.GetName());
    }

    [Parameter] public MDIconEnum Icon { get; set; }
    [Parameter] public MDIconVariant Variant { get; set; } = MDIconVariant.Default;

}
